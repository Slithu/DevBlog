{% extends 'base.html.twig' %}

{% block title %}DevBlog - Register{% endblock %}

{% block body %}
<div class="flex justify-center items-center py-12">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-semibold text-center text-gray-700 mb-6">Register</h1>

        <div class="text-red-500 text-sm mb-2">
            {{ form_errors(registrationForm) }}
        </div>

        {{ form_start(registrationForm) }}
            <div class="mb-4 text-gray-600 text-base font-medium">
                {{ form_row(registrationForm.username, {
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>

            <div class="mb-4 text-gray-600 text-base font-medium">
                {{ form_row(registrationForm.email, {
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>

            <div class="mb-4 text-gray-600 text-base font-medium">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>

            <div class="mb-4 flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, { 'attr': {'id': 'agreeTerms'} }) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', { 'label_attr': {'class': 'text-sm text-gray-600'} }) }}
            </div>
            
            <div class="text-red-500 text-sm mt-1">
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>           

            <div class="flex justify-center mt-4">
                <button type="submit" class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">Register</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
