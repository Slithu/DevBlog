{% extends 'base.html.twig' %}

{% block title %}Blog - Strona Główna{% endblock %}

{% block body %}
<div class="bg-white min-h-screen flex flex-col">

    <!-- Nagłówek -->
    <header class="bg-blue-600 text-white p-5">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-20">
                <a href="/" class="text-3xl font-bold">DevBlog</a>
                <nav class="flex space-x-4">
                    <a href="#" class="text-[17px] font-semibold transition-all duration-200 ease-in-out hover:text-blue-400 hover:scale-105 hover:-translate-y-[2px]">
                        Home
                    </a>
                    <a href="#" class="text-[17px] font-semibold transition-all duration-200 ease-in-out hover:text-blue-400 hover:scale-105 hover:-translate-y-[2px]">
                        O mnie
                    </a>
                    <a href="#" class="text-[17px] font-semibold transition-all duration-200 ease-in-out hover:text-blue-400 hover:scale-105 hover:-translate-y-[2px]">
                        Kontakt
                    </a>
                </nav>                
            </div>
    
            <div class="flex space-x-2">
                <a href="/login" class="bg-white text-blue-600 font-semibold py-2 px-4 rounded transition-transform duration-200 ease-in-out hover:bg-gray-100 hover:scale-105 hover:-translate-y-[2px]">
                    Logowanie
                </a>
                <a href="/register" class="bg-white text-blue-600 font-semibold py-2 px-4 rounded transition-transform duration-200 ease-in-out hover:bg-gray-100 hover:scale-105 hover:-translate-y-[2px]">
                    Rejestracja
                </a>
            </div>            
        </div>
    </header>    

    <!-- Główna zawartość -->
    <main class="flex-grow">
        <div class="container mx-auto p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                
                <article class="bg-sky-200 shadow-lg rounded-lg overflow-hidden transition-all duration-300 ease-in-out hover:scale-105 hover:-translate-y-[5px]">
                    <img src="https://via.placeholder.com/500x300" alt="Artykuł" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold text-gray-800">Tytuł artykułu</h2>
                        <p class="text-gray-800 mt-2">Krótki opis artykułu. Dowiedz się więcej na temat ...</p>
                        <div class="flex justify-end">
                            <a href="#" class="inline-block mt-4 bg-blue-600 text-white font-semibold py-1 px-2 rounded transition-all duration-200 ease-in-out hover:bg-blue-700 hover:scale-105 hover:-translate-y-[2px]">
                                Przeczytaj więcej
                            </a>
                        </div>
                    </div>
                </article>       

                <article class="bg-sky-200 shadow-lg rounded-lg overflow-hidden transition-all duration-300 ease-in-out hover:scale-105 hover:-translate-y-[5px]">
                    <img src="https://via.placeholder.com/500x300" alt="Artykuł" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold text-gray-800">Tytuł artykułu</h2>
