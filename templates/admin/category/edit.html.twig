{% extends 'base.html.twig' %}

{% block title %}DevBlog - Edit Category{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Edit Category</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div>
            {{ form_label(form.slug, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.slug, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="flex justify-center">
            {{ form_widget(form.save) }}
        </div>

    {{ form_end(form) }}

    <div class="flex justify-center mt-6">
        <a href="{{ path('admin_category_index') }}" class="text-blue-600 hover:underline">‚Üê Back to Category List</a>
    </div>
</div>
{% endblock %}
