{% extends 'base.html.twig' %}

{% block title %}DevBlog - Admin Panel{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8 px-4">
        <div class="max-w-6xl mx-auto bg-white p-8 rounded-xl shadow-lg text-center">
            <h1 class="text-3xl font-semibold text-gray-800 mb-6">Admin Panel</h1>
            
            <p class="text-gray-600 mb-6">
                Welcome to the administration panel. Here you can manage users and other resources.
            </p>

            <div class="flex justify-center mt-6 gap-10">
                <a href="{{ path('admin_user_index') }}" class="btn btn-primary text-white py-3 px-8 rounded-lg bg-blue-600 hover:bg-blue-700 transition duration-300 text-basic font-semibold">
                    Manage Users
                </a>
                <a href="{{ path('admin_category_index') }}" class="btn btn-primary text-white py-3 px-8 rounded-lg bg-blue-600 hover:bg-blue-700 transition duration-300 text-basic font-semibold">
                    Manage Categories
                </a>
            </div>
        </div>
    </div>
{% endblock %}
