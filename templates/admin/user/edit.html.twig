{% extends 'base.html.twig' %}

{% block title %}DevBlog - Edit User{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 mb-10 bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Edit User</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}

        <div>
            {{ form_label(form.username, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div>
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            {{ form_label(form.password, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div>
            {{ form_label(form.roles, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.roles, {'attr': {'class': 'space-x-4 font-medium text-gray-600'}}) }}
            {{ form_errors(form.roles) }}
        </div>

        <div>
            {{ form_label(form.profileImage, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.profileImage, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.profileImage) }}
        </div>

        <div>
            {{ form_label(form.createdAt, null, {'label_attr': {'class': 'block text-left font-medium text-gray-600'}}) }}
            {{ form_widget(form.createdAt, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium text-gray-600'}}) }}
            {{ form_errors(form.createdAt) }}
        </div>

        <div class="flex justify-center">
            {{ form_widget(form.save) }}
        </div>

    {{ form_end(form) }}

    <div class="flex justify-center mt-6">
        <a href="{{ path('admin_user_index') }}" class="text-blue-600 hover:underline">‚Üê Back to User List</a>
    </div>
</div>
{% endblock %}
